@model List<EcommerceDropshipping.ViewModels.Fournisseur.FournisseurListItemViewModel>
@{
    ViewData["Title"] = "Gestion des fournisseurs";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-truck me-2"></i>Fournisseurs
    </h2>
    <a href="/Admin/AddFournisseur" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nouveau fournisseur
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Produits</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fournisseur in Model)
                    {
                        <tr>
                            <td><strong>@fournisseur.Nom</strong></td>
                            <td><a href="mailto:@fournisseur.Email">@fournisseur.Email</a></td>
                            <td>@(fournisseur.Telephone ?? "-")</td>
                            <td><span class="badge bg-primary">@fournisseur.NombreProduits</span></td>
                            <td>
                                <a href="/Admin/EditFournisseur/@fournisseur.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="DeleteFournisseur" asp-route-id="@fournisseur.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Supprimer ce fournisseur ?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                            @(fournisseur.NombreProduits > 0 ? "disabled" : "") 
                                            title="@(fournisseur.NombreProduits > 0 ? "Impossible de supprimer un fournisseur avec des produits" : "Supprimer")">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-truck fa-3x text-muted mb-3"></i>
                <h5>Aucun fournisseur</h5>
                <a href="/Admin/AddFournisseur" class="btn btn-primary mt-2">
                    <i class="fas fa-plus me-2"></i>Ajouter un fournisseur
                </a>
            </div>
        }
    </div>
</div>
