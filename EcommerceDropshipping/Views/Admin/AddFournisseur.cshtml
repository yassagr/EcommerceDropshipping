@model EcommerceDropshipping.ViewModels.Fournisseur.AddFournisseurViewModel
@{
    ViewData["Title"] = "Ajouter un fournisseur";
    Layout = "_AdminLayout";
}

<div class="mb-4">
    <a href="/Admin/Fournisseurs" class="text-muted text-decoration-none">
        <i class="fas fa-arrow-left me-2"></i>Retour aux fournisseurs
    </a>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-plus me-2"></i>Nouveau fournisseur
            </div>
            <div class="card-body">
                <form asp-action="AddFournisseur" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="Nom" class="form-label"></label>
                        <input asp-for="Nom" class="form-control" placeholder="Nom de l'entreprise" />
                        <span asp-validation-for="Nom" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="contact@fournisseur.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Telephone" class="form-label"></label>
                        <input asp-for="Telephone" class="form-control" placeholder="+33 1 23 45 67 89" />
                        <span asp-validation-for="Telephone" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                        <a href="/Admin/Fournisseurs" class="btn btn-outline-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
