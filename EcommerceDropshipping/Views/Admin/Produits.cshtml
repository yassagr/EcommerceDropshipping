@model List<EcommerceDropshipping.ViewModels.Produit.ProduitListItemViewModel>
@{
    ViewData["Title"] = "Gestion des produits";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-box me-2"></i>Produits
    </h2>
    <a href="/Admin/AddProduit" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Nouveau produit
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Titre</th>
                        <th>Fournisseur</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var produit in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(produit.ImageUrl))
                                {
                                    <img src="@produit.ImageUrl" alt="@produit.Titre" 
                                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;">
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                         style="width: 50px; height: 50px;">
                                        <i class="fas fa-image text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <strong>@produit.Titre</strong>
                                @if (produit.EstNouveau)
                                {
                                    <span class="badge bg-success ms-1">Nouveau</span>
                                }
                            </td>
                            <td>@produit.FournisseurNom</td>
                            <td>@produit.Prix.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</td>
                            <td>
                                @if (produit.Stock == 0)
                                {
                                    <span class="text-danger"><i class="fas fa-times-circle me-1"></i>Rupture</span>
                                }
                                else if (produit.StockLimite)
                                {
                                    <span class="text-warning"><i class="fas fa-exclamation-triangle me-1"></i>@produit.Stock</span>
                                }
                                else
                                {
                                    <span class="text-success">@produit.Stock</span>
                                }
                            </td>
                            <td>
                                @if (produit.EstActif)
                                {
                                    <span class="badge bg-success">Actif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactif</span>
                                }
                            </td>
                            <td>
                                <a href="/Admin/EditProduit/@produit.Id" class="btn btn-sm btn-outline-primary me-1" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="DeleteProduit" asp-route-id="@produit.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Supprimer ce produit ?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <h5>Aucun produit</h5>
                <p class="text-muted">Commencez par ajouter votre premier produit</p>
                <a href="/Admin/AddProduit" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Ajouter un produit
                </a>
            </div>
        }
    </div>
</div>
