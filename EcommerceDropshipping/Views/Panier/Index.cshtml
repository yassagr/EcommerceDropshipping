@model EcommerceDropshipping.ViewModels.Panier.PanierViewModel

@{
    ViewData["Title"] = "Mon Panier";
}

<div class="container my-5">
    <h1 class="mb-4"><i class="fas fa-shopping-cart me-2"></i>Mon Panier</h1>

    @if (Model.Items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        @foreach (var item in Model.Items)
                        {
                            <div class="d-flex align-items-center border-bottom p-3">
                                <div style="width: 80px; height: 80px;" class="me-3">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Titre" class="img-fluid rounded" 
                                             style="width: 100%; height: 100%; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center h-100">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@item.Titre</h6>
                                    <p class="text-primary fw-bold mb-0">
                                        @item.Prix.ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                                    </p>
                                    <small class="text-muted">Stock disponible: @item.StockDisponible</small>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <form asp-action="Modifier" method="post" class="d-flex align-items-center">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="produitId" value="@item.ProduitId" />
                                        <div class="input-group" style="width: 130px;">
                                            <button type="button" class="btn btn-outline-secondary btn-sm" 
                                                    onclick="updateQuantity(this, -1, @item.StockDisponible)">-</button>
                                            <input type="number" name="quantite" value="@item.Quantite" 
                                                   min="1" max="@item.StockDisponible" 
                                                   class="form-control form-control-sm text-center">
                                            <button type="button" class="btn btn-outline-secondary btn-sm" 
                                                    onclick="updateQuantity(this, 1, @item.StockDisponible)">+</button>
                                        </div>
                                        <button type="submit" class="btn btn-sm btn-primary ms-2">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    </form>
                                </div>
                                <div class="text-end ms-3" style="min-width: 100px;">
                                    <p class="fw-bold mb-1">
                                        @item.SousTotal.ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                                    </p>
                                    <form asp-action="Supprimer" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="produitId" value="@item.ProduitId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Retirer cet article ?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                
                <div class="mt-3 d-flex gap-2">
                    <form asp-action="Vider" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger"
                                onclick="return confirm('Vider tout le panier ?')">
                            <i class="fas fa-trash-alt me-1"></i>Vider le panier
                        </button>
                    </form>
                    
                    <a asp-controller="Produit" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Continuer mes achats
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Résumé</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Articles (@Model.NombreArticles)</span>
                            <span>@Model.Total.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</span>
                        </div>
                        
                        <div class="d-flex justify-content-between mb-3">
                            <span>Livraison</span>
                            <span class="text-success fw-bold">Gratuite</span>
                        </div>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between mb-4">
                            <strong class="fs-5">Total</strong>
                            <strong class="text-primary fs-4">
                                @Model.Total.ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                            </strong>
                        </div>
                        
                        <a asp-controller="Commande" asp-action="Checkout" 
                           class="btn btn-warning btn-lg w-100">
                            <i class="fas fa-credit-card me-2"></i>Passer la commande
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
            <h3>Votre panier est vide</h3>
            <p class="text-muted mb-4">Découvrez nos produits et ajoutez-les à votre panier</p>
            <a asp-controller="Produit" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>Découvrir nos produits
            </a>
        </div>
    }
</div>

@section Scripts {
<script>
function updateQuantity(btn, change, maxStock) {
    var input = btn.parentElement.querySelector('input[name="quantite"]');
    var newValue = parseInt(input.value) + change;
    if (newValue >= 1 && newValue <= maxStock) {
        input.value = newValue;
    }
}
</script>
}
