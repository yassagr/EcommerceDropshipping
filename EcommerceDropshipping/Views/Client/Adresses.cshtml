@model List<EcommerceDropshipping.ViewModels.Adresse.AdresseListItemViewModel>
@{
    ViewData["Title"] = "Mes Adresses";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Mes Adresses</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Client/Profile">Mon Profil</a></li>
                    <li class="breadcrumb-item active">Adresses</li>
                </ol>
            </nav>
        </div>
        <a href="/Client/AddAdresse" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Nouvelle adresse
        </a>
    </div>
    
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var adresse in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="address-card h-100 @(adresse.EstPrincipale ? "primary" : "")">
                        @if (adresse.EstPrincipale)
                        {
                            <span class="badge-primary-address mb-2 d-inline-block">
                                <i class="fas fa-star me-1"></i>Adresse principale
                            </span>
                        }
                        <p class="mb-1"><strong>@adresse.Rue</strong></p>
                        <p class="mb-2 text-muted">@adresse.CodePostal @adresse.Ville</p>
                        <p class="mb-3 text-muted">@adresse.Pays</p>
                        <div class="d-flex gap-2">
                            <a href="/Client/EditAdresse/@adresse.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit me-1"></i>Modifier
                            </a>
                            <form asp-action="DeleteAdresse" asp-route-id="@adresse.Id" method="post" 
                                  onsubmit="return confirm('Supprimer cette adresse ?')">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-map-marker-alt"></i>
            <h3>Aucune adresse</h3>
            <p>Vous n'avez pas encore enregistr√© d'adresse</p>
            <a href="/Client/AddAdresse" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Ajouter une adresse
            </a>
        </div>
    }
</div>
