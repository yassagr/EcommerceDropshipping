@model EcommerceDropshipping.ViewModels.Client.RegisterViewModel
@{
    ViewData["Title"] = "Inscription";
}

<div class="auth-container">
    <div class="auth-card fade-in">
        <div class="auth-logo">
            <i class="fas fa-shopping-bag"></i>
        </div>
        <h2 class="auth-title">Créer un compte</h2>
        <p class="auth-subtitle">Rejoignez DropShop pour profiter de nos offres</p>
        
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Prenom" class="form-label"></label>
                    <input asp-for="Prenom" class="form-control" placeholder="Jean" />
                    <span asp-validation-for="Prenom" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Nom" class="form-label"></label>
                    <input asp-for="Nom" class="form-control" placeholder="Dupont" />
                    <span asp-validation-for="Nom" class="text-danger small"></span>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="jean.dupont@email.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="MotDePasse" class="form-label"></label>
                <input asp-for="MotDePasse" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="MotDePasse" class="text-danger small"></span>
            </div>
            
            <div class="mb-4">
                <label asp-for="ConfirmMotDePasse" class="form-label"></label>
                <input asp-for="ConfirmMotDePasse" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="ConfirmMotDePasse" class="text-danger small"></span>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 mb-3">
                <i class="fas fa-user-plus me-2"></i>S'inscrire
            </button>
        </form>
        
        <div class="divider">ou</div>
        
        <p class="text-center mb-0">
            Déjà un compte ? <a href="/Client/Login" class="text-decoration-none">Se connecter</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
