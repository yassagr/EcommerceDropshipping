@model EcommerceDropshipping.ViewModels.Client.LoginViewModel
@{
    ViewData["Title"] = "Connexion";
}

<div class="auth-container">
    <div class="auth-card fade-in">
        <div class="auth-logo">
            <i class="fas fa-shopping-bag"></i>
        </div>
        <h2 class="auth-title">Connexion</h2>
        <p class="auth-subtitle">Bienvenue sur DropShop !</p>
        
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ReturnUrl" />
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="votre@email.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="MotDePasse" class="form-label"></label>
                <input asp-for="MotDePasse" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="MotDePasse" class="text-danger small"></span>
            </div>
            
            <div class="mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Se souvenir de moi</label>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 mb-3">
                <i class="fas fa-sign-in-alt me-2"></i>Se connecter
            </button>
        </form>
        
        <div class="divider">ou</div>
        
        <p class="text-center mb-0">
            Pas encore de compte ? <a href="/Client/Register" class="text-decoration-none">S'inscrire</a>
        </p>
        
        <div class="mt-4 p-3 bg-light rounded">
            <small class="text-muted d-block mb-2"><strong>Comptes de test :</strong></small>
            <small class="text-muted d-block">Admin: admin@ecommerce.com / Admin123!</small>
            <small class="text-muted d-block">Client: jean.dupont@email.com / Client123!</small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
