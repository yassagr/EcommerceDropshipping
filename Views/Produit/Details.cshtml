@model EcommerceDropshipping.ViewModels.Produit.ProduitDetailsViewModel
@{
    ViewData["Title"] = Model.Titre;
    var relatedProducts = ViewBag.RelatedProducts as List<EcommerceDropshipping.ViewModels.Produit.ProduitListItemViewModel>;
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Accueil</a></li>
            <li class="breadcrumb-item"><a href="/Produit">Catalogue</a></li>
            <li class="breadcrumb-item active">@Model.Titre</li>
        </ol>
    </nav>
    
    <div class="row g-5">
        <!-- Product Image -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body p-0">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Titre" 
                             style="width: 100%; max-height: 500px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 400px;">
                            <i class="fas fa-image fa-5x text-muted"></i>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Product Info -->
        <div class="col-lg-6">
            <div class="mb-3">
                @if (Model.EstNouveau)
                {
                    <span class="badge-new me-2">Nouveau</span>
                }
                @if (Model.StockLimite)
                {
                    <span class="badge-low-stock">Plus que @Model.Stock en stock !</span>
                }
            </div>
            
            <small class="text-muted">@Model.FournisseurNom</small>
            <h1 class="fw-bold mb-3">@Model.Titre</h1>
            
            <div class="mb-4">
                <span class="display-5 fw-bold text-primary">
                    @Model.Prix.ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                </span>
            </div>
            
            <p class="text-muted mb-4" style="white-space: pre-line;">@Model.Description</p>
            
            <!-- Stock Status -->
            <div class="mb-4">
                @if (Model.EnStock)
                {
                    <span class="text-success">
                        <i class="fas fa-check-circle me-1"></i>En stock (@Model.Stock disponibles)
                    </span>
                }
                else
                {
                    <span class="text-danger">
                        <i class="fas fa-times-circle me-1"></i>Rupture de stock
                    </span>
                }
            </div>
            
            <!-- Add to Cart -->
            @if (Model.EnStock)
            {
                <form asp-controller="Panier" asp-action="Ajouter" method="post" class="mb-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="produitId" value="@Model.Id" />
                    <div class="d-flex gap-3 align-items-center">
                        <div class="quantity-input">
                            <label class="me-2">Quantité:</label>
                            <input type="number" name="quantite" value="1" min="1" max="@Model.Stock" 
                                   class="form-control" style="width: 80px;">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                            <i class="fas fa-cart-plus me-2"></i>Ajouter au panier
                        </button>
                    </div>
                </form>
            }
            
            <!-- Features -->
            <div class="border-top pt-4">
                <div class="row g-3">
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-truck text-primary me-3 fa-lg"></i>
                            <div>
                                <strong class="d-block">Livraison rapide</strong>
                                <small class="text-muted">Gratuite dès 50€</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-undo text-primary me-3 fa-lg"></i>
                            <div>
                                <strong class="d-block">Retours gratuits</strong>
                                <small class="text-muted">Sous 30 jours</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Related Products -->
    @if (relatedProducts != null && relatedProducts.Any())
    {
        <section class="mt-5 pt-5 border-top">
            <h3 class="mb-4">Produits similaires</h3>
            <div class="row g-4">
                @foreach (var produit in relatedProducts)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product-card">
                            <div class="card-img-wrapper">
                                @if (!string.IsNullOrEmpty(produit.ImageUrl))
                                {
                                    <img src="@produit.ImageUrl" class="card-img-top" alt="@produit.Titre">
                                }
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/Produit/Details/@produit.Id">@produit.Titre</a>
                                </h5>
                                <span class="price">@produit.Prix.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
</div>
