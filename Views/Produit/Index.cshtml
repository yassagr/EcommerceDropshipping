@model EcommerceDropshipping.ViewModels.Produit.CatalogueViewModel
@{
    ViewData["Title"] = "Catalogue";
}

<div class="container py-4">
    <div class="row">
        <!-- Filters Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="filter-sidebar">
                <h5 class="filter-title">
                    <i class="fas fa-filter me-2"></i>Filtres
                </h5>
                
                <form method="get" id="filterForm">
                    <!-- Search -->
                    <div class="mb-4">
                        <label class="form-label small text-muted">Recherche</label>
                        <input type="text" name="search" class="form-control" 
                               placeholder="Rechercher..." value="@Model.SearchQuery">
                    </div>
                    
                    <!-- Price Range -->
                    <div class="mb-4">
                        <label class="form-label small text-muted">Prix</label>
                        <div class="row g-2">
                            <div class="col-6">
                                <input type="number" name="prixMin" class="form-control" 
                                       placeholder="Min" value="@Model.PrixMin" min="0">
                            </div>
                            <div class="col-6">
                                <input type="number" name="prixMax" class="form-control" 
                                       placeholder="Max" value="@Model.PrixMax" min="0">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Supplier -->
                    <div class="mb-4">
                        <label class="form-label small text-muted">Fournisseur</label>
                        <select name="fournisseurId" class="form-select">
                            <option value="">Tous les fournisseurs</option>
                            @foreach (var f in Model.Fournisseurs)
                            {
                                <option value="@f.Id" selected="@(Model.FournisseurId == f.Id)">
                                    @f.Nom (@f.NombreProduits)
                                </option>
                            }
                        </select>
                    </div>
                    
                    <!-- Sort -->
                    <div class="mb-4">
                        <label class="form-label small text-muted">Trier par</label>
                        <select name="tri" class="form-select">
                            <option value="nouveau" selected="@(Model.TriPar == "nouveau")">Plus récents</option>
                            <option value="prix_asc" selected="@(Model.TriPar == "prix_asc")">Prix croissant</option>
                            <option value="prix_desc" selected="@(Model.TriPar == "prix_desc")">Prix décroissant</option>
                            <option value="nom" selected="@(Model.TriPar == "nom")">Nom A-Z</option>
                        </select>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Appliquer
                    </button>
                    
                    @if (!string.IsNullOrEmpty(Model.SearchQuery) || Model.PrixMin.HasValue || 
                         Model.PrixMax.HasValue || Model.FournisseurId.HasValue)
                    {
                        <a href="/Produit" class="btn btn-outline-secondary w-100 mt-2">
                            <i class="fas fa-times me-2"></i>Réinitialiser
                        </a>
                    }
                </form>
            </div>
        </div>
        
        <!-- Products Grid -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">Catalogue</h2>
                    <p class="text-muted mb-0">@Model.TotalItems produit(s) trouvé(s)</p>
                </div>
            </div>
            
            @if (Model.Produits.Any())
            {
                <div class="row g-4">
                    @foreach (var produit in Model.Produits)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="product-card">
                                <div class="card-img-wrapper">
                                    @if (!string.IsNullOrEmpty(produit.ImageUrl))
                                    {
                                        <img src="@produit.ImageUrl" class="card-img-top" alt="@produit.Titre">
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center h-100 bg-light position-absolute w-100">
                                            <i class="fas fa-image fa-3x text-muted"></i>
                                        </div>
                                    }
                                    <div class="badge-wrapper">
                                        @if (produit.EstNouveau)
                                        {
                                            <span class="badge-new">Nouveau</span>
                                        }
                                        @if (produit.StockLimite)
                                        {
                                            <span class="badge-low-stock">Stock limité</span>
                                        }
                                        @if (!produit.EnStock)
                                        {
                                            <span class="badge-out-of-stock">Rupture</span>
                                        }
                                    </div>
                                </div>
                                <div class="card-body">
                                    <small class="text-muted">@produit.FournisseurNom</small>
                                    <h5 class="card-title">
                                        <a href="/Produit/Details/@produit.Id">@produit.Titre</a>
                                    </h5>
                                    <p class="card-text">@produit.DescriptionCourte</p>
                                    <div class="d-flex justify-content-between align-items-center mt-auto">
                                        <span class="price">@produit.Prix.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</span>
                                        @if (produit.EnStock)
                                        {
                                            <form asp-controller="Panier" asp-action="Ajouter" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="produitId" value="@produit.Id" />
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-cart-plus me-1"></i>Ajouter
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Indisponible</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav class="mt-5">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(Model.Page - 1)&search=@Model.SearchQuery&prixMin=@Model.PrixMin&prixMax=@Model.PrixMax&fournisseurId=@Model.FournisseurId&tri=@Model.TriPar">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Page ? "active" : "")">
                                    <a class="page-link" href="?page=@i&search=@Model.SearchQuery&prixMin=@Model.PrixMin&prixMax=@Model.PrixMax&fournisseurId=@Model.FournisseurId&tri=@Model.TriPar">@i</a>
                                </li>
                            }
                            
                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(Model.Page + 1)&search=@Model.SearchQuery&prixMin=@Model.PrixMin&prixMax=@Model.PrixMax&fournisseurId=@Model.FournisseurId&tri=@Model.TriPar">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-search"></i>
                    <h3>Aucun produit trouvé</h3>
                    <p>Essayez de modifier vos critères de recherche</p>
                    <a href="/Produit" class="btn btn-primary">Voir tous les produits</a>
                </div>
            }
        </div>
    </div>
</div>
