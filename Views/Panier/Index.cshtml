@model EcommerceDropshipping.ViewModels.Panier.PanierViewModel
@{
    ViewData["Title"] = "Mon Panier";
}

<div class="container py-4">
    <h2 class="mb-4">
        <i class="fas fa-shopping-cart me-2"></i>Mon Panier
    </h2>
    
    @if (!Model.EstVide)
    {
        <!-- Free shipping banner -->
        @if (!Model.LivraisonGratuite)
        {
            <div class="alert alert-info mb-4">
                <i class="fas fa-truck me-2"></i>
                Plus que <strong>@Model.MontantPourLivraisonGratuite.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</strong> 
                pour bénéficier de la livraison gratuite !
                <div class="shipping-progress mt-2">
                    <div class="shipping-progress-bar" style="width: @((Model.SousTotal / 50 * 100))%;"></div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-success mb-4">
                <i class="fas fa-check-circle me-2"></i>
                Félicitations ! Vous bénéficiez de la <strong>livraison gratuite</strong> !
            </div>
        }
        
        <div class="row g-4">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body p-0">
                        <table class="table cart-table mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 50%;">Produit</th>
                                    <th>Prix</th>
                                    <th>Quantité</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.Titre" class="me-3">
                                                }
                                                else
                                                {
                                                    <div class="bg-light rounded d-flex align-items-center justify-content-center me-3" 
                                                         style="width: 80px; height: 80px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <a href="/Produit/Details/@item.ProduitId" class="fw-semibold text-dark text-decoration-none">
                                                        @item.Titre
                                                    </a>
                                                    @if (item.StockDisponible < 10)
                                                    {
                                                        <small class="text-warning d-block">
                                                            <i class="fas fa-exclamation-triangle me-1"></i>Plus que @item.StockDisponible en stock
                                                        </small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            @item.Prix.ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                                        </td>
                                        <td class="align-middle">
                                            <form asp-action="Modifier" method="post" class="d-flex align-items-center gap-2">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="produitId" value="@item.ProduitId" />
                                                <input type="number" name="quantite" value="@item.Quantite" 
                                                       min="1" max="@item.StockDisponible" 
                                                       class="form-control cart-quantity" 
                                                       onchange="this.form.submit()">
                                            </form>
                                        </td>
                                        <td class="align-middle fw-semibold">
                                            @item.Total.ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                                        </td>
                                        <td class="align-middle">
                                            <form asp-action="Supprimer" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="produitId" value="@item.ProduitId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between mt-3">
                    <a href="/Produit" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Continuer mes achats
                    </a>
                    <form asp-action="Vider" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger" 
                                onclick="return confirm('Vider tout le panier ?')">
                            <i class="fas fa-trash me-2"></i>Vider le panier
                        </button>
                    </form>
                </div>
            </div>
            
            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="checkout-summary">
                    <h5 class="mb-4">Récapitulatif</h5>
                    
                    <div class="checkout-item">
                        <span>Sous-total (@Model.NombreArticles articles)</span>
                        <span>@Model.SousTotal.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</span>
                    </div>
                    
                    <div class="checkout-item">
                        <span>Livraison</span>
                        @if (Model.LivraisonGratuite)
                        {
                            <span class="text-success">Gratuite</span>
                        }
                        else
                        {
                            <span>@Model.FraisLivraison.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</span>
                        }
                    </div>
                    
                    <div class="checkout-item border-top pt-3 mt-3">
                        <span class="checkout-total">Total</span>
                        <span class="checkout-total">@Model.Total.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</span>
                    </div>
                    
                    <a href="/Commande/Checkout" class="btn btn-primary w-100 btn-lg mt-4">
                        <i class="fas fa-credit-card me-2"></i>Passer commande
                    </a>
                    
                    <div class="text-center mt-3">
                        <small class="text-muted">
                            <i class="fas fa-lock me-1"></i>Paiement 100% sécurisé
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-shopping-cart"></i>
            <h3>Votre panier est vide</h3>
            <p>Parcourez notre catalogue pour trouver des produits qui vous plaisent</p>
            <a href="/Produit" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>Découvrir nos produits
            </a>
        </div>
    }
</div>
