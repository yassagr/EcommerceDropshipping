@model EcommerceDropshipping.ViewModels.Commande.CommandeDetailsViewModel
@{
    ViewData["Title"] = "Détails commande";
    Layout = "_AdminLayout";
}

<div class="mb-4">
    <a href="/Admin/Commandes" class="text-muted text-decoration-none">
        <i class="fas fa-arrow-left me-2"></i>Retour aux commandes
    </a>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <!-- Order Info -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>
                    <i class="fas fa-info-circle me-2"></i>
                    Commande #@Model.Id.ToString().Substring(0, 8).ToUpper()
                </span>
                <span class="badge bg-@Model.StatutClass fs-6">@Model.StatutLabel</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <small class="text-muted d-block">Client</small>
                        <strong>@Model.ClientNom</strong>
                        <div class="text-muted small">@Model.ClientEmail</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <small class="text-muted d-block">Date</small>
                        <strong>@Model.Date.ToString("dd/MM/yyyy à HH:mm")</strong>
                    </div>
                    <div class="col-12">
                        <small class="text-muted d-block">Adresse de livraison</small>
                        <strong>@Model.AdresseLivraison</strong>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Items -->
        <div class="card">
            <div class="card-header">
                <i class="fas fa-shopping-bag me-2"></i>Articles
            </div>
            <div class="card-body p-0">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix unitaire</th>
                            <th>Quantité</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ligne in Model.Lignes)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(ligne.ProduitImage))
                                        {
                                            <img src="@ligne.ProduitImage" alt="" 
                                                 style="width: 40px; height: 40px; object-fit: cover; border-radius: 6px;" class="me-2">
                                        }
                                        @ligne.ProduitTitre
                                    </div>
                                </td>
                                <td>@ligne.PrixUnitaire.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</td>
                                <td>@ligne.Quantite</td>
                                <td class="text-end fw-semibold">@ligne.Total.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</td>
                            </tr>
                        }
                        <tr class="table-light">
                            <td colspan="3" class="text-end fw-bold">Total</td>
                            <td class="text-end fw-bold text-primary fs-5">
                                @Model.MontantTotal.ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Update Status -->
        <div class="card">
            <div class="card-header">
                <i class="fas fa-sync-alt me-2"></i>Mettre à jour le statut
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatutCommande" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="d-grid gap-2">
                        <button type="submit" name="statut" value="EnAttente" 
                                class="btn @(Model.Statut.ToString() == "EnAttente" ? "btn-warning" : "btn-outline-warning")">
                            <i class="fas fa-clock me-2"></i>En attente
                        </button>
                        <button type="submit" name="statut" value="EnCours" 
                                class="btn @(Model.Statut.ToString() == "EnCours" ? "btn-info" : "btn-outline-info")">
                            <i class="fas fa-cog me-2"></i>En cours
                        </button>
                        <button type="submit" name="statut" value="Expediee" 
                                class="btn @(Model.Statut.ToString() == "Expediee" ? "btn-primary" : "btn-outline-primary")">
                            <i class="fas fa-truck me-2"></i>Expédiée
                        </button>
                        <button type="submit" name="statut" value="Livree" 
                                class="btn @(Model.Statut.ToString() == "Livree" ? "btn-success" : "btn-outline-success")">
                            <i class="fas fa-check me-2"></i>Livrée
                        </button>
                        <hr>
                        <button type="submit" name="statut" value="Annulee" 
                                class="btn @(Model.Statut.ToString() == "Annulee" ? "btn-danger" : "btn-outline-danger")">
                            <i class="fas fa-times me-2"></i>Annuler
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
