@model EcommerceDropshipping.ViewModels.Commande.CheckoutViewModel
@{
    ViewData["Title"] = "Finaliser la commande";
}

<div class="container py-4">
    <h2 class="mb-4">
        <i class="fas fa-credit-card me-2"></i>Finaliser la commande
    </h2>
    
    <form asp-action="Checkout" method="post">
        @Html.AntiForgeryToken()
        
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        
        <div class="row g-4">
            <!-- Delivery Address -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-map-marker-alt me-2"></i>Adresse de livraison
                    </div>
                    <div class="card-body">
                        @if (Model.AdressesDisponibles.Any())
                        {
                            <div class="row g-3">
                                @foreach (var adresse in Model.AdressesDisponibles)
                                {
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="AdresseLivraisonId" 
                                                   value="@adresse.Id" id="addr_@adresse.Id"
                                                   checked="@(Model.AdresseLivraisonId == adresse.Id)">
                                            <label class="form-check-label" for="addr_@adresse.Id">
                                                <div class="address-card" style="cursor: pointer;">
                                                    @if (adresse.EstPrincipale)
                                                    {
                                                        <span class="badge bg-primary mb-2">Principale</span>
                                                    }
                                                    <p class="mb-1"><strong>@adresse.Rue</strong></p>
                                                    <p class="mb-0 text-muted small">@adresse.CodePostal @adresse.Ville, @adresse.Pays</p>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                            
                            <div class="mt-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="CreerNouvelleAdresse" 
                                           id="newAddr" value="true" onchange="toggleNewAddrForm()">
                                    <label class="form-check-label" for="newAddr">
                                        Utiliser une nouvelle adresse
                                    </label>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Vous n'avez pas d'adresse enregistrée. Veuillez en ajouter une ci-dessous.
                            </div>
                            <input type="hidden" name="CreerNouvelleAdresse" value="true" />
                        }
                        
                        <!-- New Address Form -->
                        <div id="newAddrForm" class="@(Model.AdressesDisponibles.Any() ? "d-none" : "") mt-4 p-3 bg-light rounded">
                            <h6 class="mb-3">Nouvelle adresse</h6>
                            <div class="mb-3">
                                <label class="form-label">Rue</label>
                                <input type="text" name="NouvelleAdresse.Rue" class="form-control" placeholder="123 Rue de Paris" />
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Code Postal</label>
                                    <input type="text" name="NouvelleAdresse.CodePostal" class="form-control" placeholder="75001" />
                                </div>
                                <div class="col-md-8 mb-3">
                                    <label class="form-label">Ville</label>
                                    <input type="text" name="NouvelleAdresse.Ville" class="form-control" placeholder="Paris" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Pays</label>
                                <input type="text" name="NouvelleAdresse.Pays" class="form-control" value="France" />
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Order Items -->
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-shopping-bag me-2"></i>Articles commandés
                    </div>
                    <div class="card-body p-0">
                        <table class="table mb-0">
                            <tbody>
                                @foreach (var item in Model.Panier.Items)
                                {
                                    <tr>
                                        <td style="width: 70px;">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.Titre" 
                                                     style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;">
                                            }
                                        </td>
                                        <td>
                                            <strong>@item.Titre</strong>
                                            <small class="text-muted d-block">Qté: @item.Quantite</small>
                                        </td>
                                        <td class="text-end">
                                            @item.Total.ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="checkout-summary">
                    <h5 class="mb-4">Récapitulatif</h5>
                    
                    <div class="checkout-item">
                        <span>Sous-total</span>
                        <span>@Model.Panier.SousTotal.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</span>
                    </div>
                    
                    <div class="checkout-item">
                        <span>Livraison</span>
                        @if (Model.Panier.LivraisonGratuite)
                        {
                            <span class="text-success">Gratuite</span>
                        }
                        else
                        {
                            <span>@Model.Panier.FraisLivraison.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</span>
                        }
                    </div>
                    
                    <div class="checkout-item border-top pt-3 mt-3">
                        <span class="checkout-total">Total</span>
                        <span class="checkout-total">@Model.Panier.Total.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100 btn-lg mt-4">
                        <i class="fas fa-check me-2"></i>Confirmer la commande
                    </button>
                    
                    <a href="/Panier" class="btn btn-outline-secondary w-100 mt-2">
                        <i class="fas fa-arrow-left me-2"></i>Retour au panier
                    </a>
                    
                    <div class="text-center mt-3">
                        <small class="text-muted">
                            <i class="fas fa-lock me-1"></i>Paiement 100% sécurisé
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function toggleNewAddrForm() {
            var form = document.getElementById('newAddrForm');
            var checkbox = document.getElementById('newAddr');
            if (checkbox.checked) {
                form.classList.remove('d-none');
            } else {
                form.classList.add('d-none');
            }
        }
    </script>
}
