@model EcommerceDropshipping.ViewModels.Commande.ConfirmationViewModel
@{
    ViewData["Title"] = "Commande confirmée";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="confirmation-icon">
                <i class="fas fa-check"></i>
            </div>
            
            <h1 class="mb-3">Merci pour votre commande !</h1>
            <p class="text-muted mb-4">
                Votre commande a été enregistrée avec succès. Vous recevrez bientôt un email de confirmation.
            </p>
            
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row text-start">
                        <div class="col-6 mb-3">
                            <small class="text-muted d-block">Numéro de commande</small>
                            <strong>#@Model.CommandeId.ToString().Substring(0, 8).ToUpper()</strong>
                        </div>
                        <div class="col-6 mb-3">
                            <small class="text-muted d-block">Date</small>
                            <strong>@Model.DateCommande.ToString("dd/MM/yyyy HH:mm")</strong>
                        </div>
                        <div class="col-6 mb-3">
                            <small class="text-muted d-block">Articles</small>
                            <strong>@Model.NombreArticles</strong>
                        </div>
                        <div class="col-6 mb-3">
                            <small class="text-muted d-block">Total</small>
                            <strong class="text-primary">
                                @Model.MontantTotal.ToString("C", new System.Globalization.CultureInfo("fr-FR"))
                            </strong>
                        </div>
                        <div class="col-12">
                            <small class="text-muted d-block">Livraison à</small>
                            <strong>@Model.AdresseLivraison</strong>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="d-flex gap-3 justify-content-center">
                <a href="/Commande/MesCommandes" class="btn btn-primary">
                    <i class="fas fa-box me-2"></i>Voir mes commandes
                </a>
                <a href="/Produit" class="btn btn-outline-primary">
                    <i class="fas fa-shopping-bag me-2"></i>Continuer mes achats
                </a>
            </div>
        </div>
    </div>
</div>
